.ui.vertical.labeled.icon.pointing.main.menu
  a.item href=root_path
    = 'Conflux'
  = active_link_to project_dashboard_path(@project), class: 'item' do
    i.dashboard.icon
    span = t('project.dashboard')
  a.item.search-toggle
    i.search.icon
    span = t('action.word.search')
  = active_link_to project_issues_path(@project), class: 'item' do
    i.tasks.icon
    span = t('project.issues')
  = active_link_to project_sprints_path(@project), class: 'item' do
    i.flag.icon
    span = t('project.sprints')
  = active_link_to project_attachments_path(@project), class: 'item' do
    i.file.icon
    span = t('project.attachments')
  a.item.channels-toggle
    i.comments.icon
    span = t('project.channels')
  - if policy(:dashboard).update?
    a.item href=edit_project_settings_path(@project)
      i.setting.icon
      span = t('project.settings')

  = render 'layouts/sidemenu_avatar'
