.content
  .date
    => time_format_relative_tag event.created_at
  .summary
    = link_to event.author.name, user_path(event.author)
    - if (event.joined?)
      = t('action.word.join')
    - else
      = t('action.word.left')
    = t('project.members')
    = link_to event.target.name, user_path(event.target)
    | &nbsp;
    == t("event.at")+'&nbsp;'
    = link_to event.project.name, event.project
