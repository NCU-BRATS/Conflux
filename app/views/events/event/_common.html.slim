- target = event.target_json
.content
  .date
    => time_format_relative_tag event.created_at
  .summary
    = link_to event.author.name, user_path(event.author)
    | &nbsp;
    = event_action_name(event)
    | &nbsp;
    strong
      - name = target['title'] || target['name']
      - id = target['sequential_id'] || target['id']
      = link_to " #" + event.target_id.to_s + " " + name, send("project_#{event.target_type.underscore}_path", event.project, id)
