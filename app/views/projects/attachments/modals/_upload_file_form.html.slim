= simple_form_for([project, local_assigns.fetch(:form, Attachment.new)], authenticity_token: true) do |f|
  .attachment-drag.ui.segment
    .ui.hidden.divider
    .card
      .image style='text-align:center; margin-bottom:20px;'
        i.massive.file.icon
      .content
        .header style='text-align:center;'
          = 'DRAG FILE TO HERE'

  .attachment-input
    .attachment-name
      = f.input :name, label: false
    .attachment-path.ui.button
      = f.input :path, label: :File, as: :file
  = f.input :path_cache, as: :hidden
  a#submit_file.ui.button = t('action.word.upload')
